<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.shengmao.swipetest"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SwipeItemActivity"
            android:label="测试拖动和事件传递" />
        <activity
            android:name=".ListViewDemoActivity"
            android:label="ListView示例" />
        <activity
            android:name=".RecyclerViewDemoActivity"
            android:label="RecyclerView示例" />
    </application>

</manifest>
